{
  "name": "react-semantic-ui-skeleton",
  "description": "React + Redux + Semantic UI Skeleton",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/i18next": "^8.4.1",
    "@types/jest": "^20.0.5",
    "@types/lodash": "^4.14.78",
    "@types/node": "^8.0.17",
    "@types/react": "^16.0.7",
    "@types/react-dom": "^16.0.1",
    "@types/react-i18next": "^4.6.0",
    "@types/react-redux": "^5.0.9",
    "@types/react-router": "^4.0.15",
    "@types/react-router-dom": "^4.0.8",
    "@types/recompose": "^0.24.2",
    "@types/redux-immutable": "^3.0.37",
    "@types/webpack-env": "^1.13.0",
    "axios": "^0.16.2",
    "gulp": "^3.9.1",
    "gulp-cli": "^1.4.0",
    "history": "^4.7.2",
    "i18next": "^9.0.0",
    "i18next-resource-store-loader": "^0.1.2",
    "immutable": "^3.8.1",
    "lodash": "^4.17.4",
    "notifyjs": "^3.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-i18next": "^4.7.0",
    "react-redux": "^5.0.6",
    "react-redux-typescript": "^2.3.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "recompose": "^0.25.1",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-immutable": "^4.0.0",
    "redux-saga": "^0.15.6",
    "reselect": "^3.0.1",
    "semantic-ui": "^2.2.13",
    "semantic-ui-react": "^0.75.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "app-root-path": "^2.0.1",
    "autoprefixer": "^7.1.2",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^2.2.0",
    "cli-highlight": "^1.1.4",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "fs-extra": "^4.0.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^20.0.4",
    "object-assign": "^4.1.1",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.8",
    "promise": "^8.0.1",
    "react-dev-utils": "^4.1.0",
    "react-error-overlay": "^1.0.9",
    "source-map-loader": "^0.2.2",
    "style-loader": "^0.19.0",
    "sw-precache-webpack-plugin": "^0.11.4",
    "ts-jest": "^20.0.7",
    "ts-loader": "^3.0.3",
    "tslint": "^5.5.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.1.0",
    "typescript": "^2.5.3",
    "url-loader": "^0.5.9",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-manifest-plugin": "^1.2.1",
    "whatwg-fetch": "^2.0.3"
  },
  "scripts": {
    "semantic": "gulp --cwd semantic build",
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "/app/tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
